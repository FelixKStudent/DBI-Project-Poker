<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sessions by ID</title>
  <link rel="stylesheet" href="/styles.css">
</head>

<body>
  <h1>Sessions by Date</h1>
  <form action="/tournaments" method="post">
    <label for="selectedId">Select ID:</label>
    <select name="selectedId" id="selectedId">
      <% sessions.forEach(session => { %>
      <option value="<%= session.s_id %>"><%= session.s_date.toLocaleDateString() %></option> <!-- TODO: Date rendering on frontend -->
      <% }); %>
    </select>
    <button type="submit">Get Sessions</button>
  </form>
</body>

</html>
